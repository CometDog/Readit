<?xml version="1.0" encoding="utf-8"?>

<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Readit.View.PostViewCell">
    <StackLayout Orientation="Horizontal" Padding="16,8">
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
            <Label FontSize="16" x:Name="Title" />
            <StackLayout Orientation="Horizontal">
                <Label FontSize="12" LineBreakMode="TailTruncation" x:Name="Subreddit" />
                <Label FontSize="12" LineBreakMode="TailTruncation" x:Name="Author" />
            </StackLayout>
        </StackLayout>
        <Image IsVisible="false" WidthRequest="50" HeightRequest="50" x:Name="Thumbnail" HorizontalOptions="End" />
    </StackLayout>
</ViewCell>